source 'http://rubygems.org'

# Rails
gem 'rails', '3.0.0'

# Database
gem 'mysql'

# Authentication
gem 'devise'

# Frontend
gem 'haml'
gem 'sass'

# Deployment
gem 'capistrano'

group :development do
  gem 'hpricot'
  gem 'ruby_parser'
end

# Development and testing
group :development, :test do
  gem 'rspec'
  gem 'rspec-rails'
  gem 'metric_fu'
end