source 'http://rubygems.org'

# Rails
gem 'rails'

# Database
gem 'mysql'

# Constellation
gem 'constellation'

# Authentication
gem 'devise'

# Frontend
gem 'haml'

# Deployment
gem 'capistrano'

# Development
group :development, :test do
  gem 'haml-rails'
  gem 'hpricot'
  gem 'metric_fu'
  gem 'nokogiri'
  gem 'piglet'
end

# Testing
group :test do
  gem 'ruby_parser'
  gem 'rspec-rails'
  gem 'rspec'
  gem 'capybara'
  gem 'cucumber-rails'
  gem 'database_cleaner'
  gem 'factory_girl_rails'
end

# Testing
group :test do
  gem 'sqlite3-ruby', :require => 'sqlite3'
end
